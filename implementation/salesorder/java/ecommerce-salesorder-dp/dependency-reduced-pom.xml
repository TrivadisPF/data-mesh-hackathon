<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>ecommerce-salesorder-parent</artifactId>
    <groupId>com.trivadis.ecommerce</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>ecommerce-salesorder-dp</artifactId>
  <name>tvd-ecommerce-orderproc</name>
  <version>1.0-SNAPSHOT</version>
  <description>tvd-ecommerce-orderproc</description>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <release>11</release>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>log4j:*</exclude>
                </excludes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <mainClass>com.trivadis.ecommerce.orderproc.StreamingApp</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.google.cloud.tools</groupId>
        <artifactId>jib-maven-plugin</artifactId>
        <version>${jib-maven-plugin.version}</version>
        <executions>
          <execution>
            <id>dockerBuild</id>
            <phase>package</phase>
            <goals>
              <goal>dockerBuild</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <to>
            <image>docker.io/trivadis/tvd-ecommerce-orderproc</image>
            <auth>
              <username>gschmutz</username>
            </auth>
          </to>
          <container>
            <mainClass>${mainClass}</mainClass>
            <jvmFlags>
              <jvmFlag>-Djava.awt.headless=true</jvmFlag>
              <jvmFlag>-XX:InitialRAMFraction=2</jvmFlag>
              <jvmFlag>-XX:MinRAMFraction=2</jvmFlag>
              <jvmFlag>-XX:MaxRAMFraction=2</jvmFlag>
              <jvmFlag>-XX:+UseG1GC</jvmFlag>
              <jvmFlag>-XX:MaxGCPauseMillis=100</jvmFlag>
              <jvmFlag>-XX:+UseStringDeduplication</jvmFlag>
            </jvmFlags>
          </container>
          <extraDirectories>
            <paths>
              <path>
                <from>${project.basedir}/target/classes/docker</from>
                <into>/etc/azkarra</into>
              </path>
            </paths>
          </extraDirectories>
          <containerizingMode>packaged</containerizingMode>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>confluent</id>
      <url>https://packages.confluent.io/maven/</url>
    </repository>
  </repositories>
  <properties>
    <kafka.streams.version>2.7.0</kafka.streams.version>
    <maven.compiler.target>11</maven.compiler.target>
    <azkarra.streams.version>0.9.2</azkarra.streams.version>
    <maven.compiler.source>11</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <log4j.version>2.13.3</log4j.version>
    <jib-maven-plugin.version>2.8.0</jib-maven-plugin.version>
    <confluent.version>7.1.0</confluent.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
</project>

