@namespace("com.trivadis.ecommerce.product.avro")
protocol ProductStateProtocol {
	import idl "../Product.avdl";

	@domain("product")
	/**
    This State Event fires whenever a product is added, changed or deleted.
    If a product is deleted, then the event itself is empty and the key of the message/record in the Kafka topic holds the customer key.
    */
	record ProductState {
		Product product;
	}
}