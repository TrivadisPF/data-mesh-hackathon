@namespace("com.trivadis.ecommerce.customer.avro")
protocol CustomerStateProtocol {
	import idl "../Customer.avdl";

	/**
	 *  This State Event fires whenever a customer is added, changed or deleted.
    If a customer is deleted, then the event itself is empty and the key of the message/record in the Kafka topic holds the customer key.
    */
	@domain("customer")
	@owner("customer")
	@data_zone("DataProduct")
	@tags(["pii"])
	record CustomerState {
		Customer customer;
	}
}